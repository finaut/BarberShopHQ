<div class="alert alert-danger" id="alert" role="alert"><%= @error %></div>
<div class="froms">
    <form action="/" method='POST'>
      <label for="name">Name: </label> </br>
      <input type="text" name="name" class="form-control" placeholder="Danil" value="<%= @name %>"> </br>
      <label for="phone">Mobile:</label> </br>
      <input type="text" name="phone" class="form-control" value="<%= @mobile %>" placeholder="+380662717550" > </br>
      <label for="dateshop">Datashop: </label> </br>
      <input  type="text" name="dateshop" class="form-control" id='datetimepicker' value="<%= @dateshop %>" placeholder="24.01.2000" > </br>
      <script type="text/javascript" charset="utf-8">
          $(function () {
              $('#datetimepicker').datetimepicker();
          });
      </script>
      <label for="barber">Barber: </label>
        <select name="barber" class="form-control">
          <% @barbers.each do |bar|  %>
            <option <%= @barber == bar['name'] ? 'selected' : '' %> ><%= bar['name'] %></option>
          <% end %>
        </select> </br>
        <div class="sss">
        <select id="color" name="color">
          <option value="#7bd148">Green</option>
          <option value="#5484ed">Bold blue</option>
          <option value="#a4bdfc">Blue</option>
          <option value="#46d6db">Turquoise</option>
          <option value="#7ae7bf">Light green</option>
          <option value="#51b749">Bold green</option>
          <option value="#fbd75b">Yellow</option>
          <option value="#ffb878">Orange</option>
          <option value="#ff887c">Red</option>
          <option value="#dc2127">Bold red</option>
          <option value="#dbadff">Purple</option>
          <option value="#e1e1e1">Gray</option>
        </select> </br>
      <input type="submit" class="btn btn-dark" id="sss" value="Confirm">
        </div>
    </form>
  </div>
  <script type="text/javascript">
      $(function() {
          $("#color").simplecolorpicker();
      });
  </script>
